generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  Id        String    @id @default(uuid())
  email     String
  password  String?
  project   Project[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Project {
  Id          String      @id @default(uuid())
  description String
  type        ProjectType
  userId      String
  prompts Prompt[]
  user        User        @relation(fields: [userId], references: [Id])
}

model Prompt {
  Id String @id @default(uuid())
  content String
  projectId String
  type PromptType
  project Project @relation(fields: [projectId],references: [Id])
}

enum ProjectType {
  REACT_NATIVE
  NEXTJS
  REACT
}

enum PromptType {
  USER
  MODEL
}
